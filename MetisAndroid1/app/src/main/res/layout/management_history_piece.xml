<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/missionCard"
        android:layout_margin="10dp"
        >

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/management_card_background">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerInside"
                android:id="@+id/mhcImage" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mhcImage"
            android:layout_marginLeft="5dp"
            android:background="#99ffffff"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mhcDate"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mhcTitle"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/mhcDate"
                android:layout_marginLeft="5dp"
                android:text="Area"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text26"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/mhcTitle"
                android:layout_marginLeft="5dp"
                android:text="AttendedBy    :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mhcAssignedBy"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/text26"
                android:layout_marginLeft="20dp"
                android:text="Someone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text27"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/mhcAssignedBy"
                android:layout_marginLeft="5dp"
                android:text="Status             :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mhcStatus"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/text27"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mhcPriority"
                android:text="Priority"
                android:layout_below="@id/mhcStatus"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:textColor="#0000ff"/>
</RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>