<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        >

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:id="@+id/uhcImage"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/uhcImage"
    android:layout_marginTop="56dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:background="#99ffffff"

    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uhcDate"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="14011997"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uhcTitle"
        android:layout_below="@id/uhcDate"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Area"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/uhcTitle"
        android:id="@+id/uhcStatus"
        android:fitsSystemWindows="true"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:text="Status"/>
</RelativeLayout>

