<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/missionCard"
        android:layout_margin="10dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/management_card_background">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerInside"
                android:id="@+id/macImage" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/macImage"
            android:layout_marginLeft="5dp"
            android:background="#99ffffff"

            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/macDate"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/macTitle"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/macDate"
                android:layout_marginLeft="5dp"
                android:text="Area"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text14"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/macTitle"
                android:layout_marginLeft="5dp"
                android:text="Assigned To :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/macAssignedTo"
                android:layout_below="@id/text14"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Someone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/macPriority"
                android:text="Priority"
                android:layout_below="@id/macAssignedTo"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:textColor="#0000ff"/>

</RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>